{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": "warn",
        "react/prop-types": "warn"
    },
    "globals": {
        "document": true,
        "window": true,
        "require": true,
        "process": true
    }
}
